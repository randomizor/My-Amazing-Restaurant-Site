<%= link_to restaurant_path(restaurant.id) do %>
	<div class="row">
  		<div class="span4 offset1">
    		<div class="thumbnail">
				<img alt="" style="height:270px;width:360px;background:#ccc;" src="<%= restaurant.photo_url %>" >
	    	</div>
		</div>
	
	    <div class="span6 ">
	    	<h3 class="text-center"><%= restaurant.name %></h3>
	    	<p><strong>Location</strong> - <%= restaurant.location %></p>
	    	<p><strong>Food Type</strong> - <%= restaurant.food_type %></p>
	    	<p><%= restaurant.description %></p>
	    </div>
	</div>
<% end %>
<br>